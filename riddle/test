<?php

$popularSearches = getPopularSearches(15);
if ($popularSearches) {
    echo "<aside class=\"popular-searches\" id=\"ps\"><div class=\"popular-searches-container\"><h3>Popular Searches</h3><ul class=\"search-list\">";
    foreach ($popularSearches as $popularSearch) {
        $search = $popularSearch->search;
        $linkTitle = formatTitle($search);
        echo "<li><a href=\"${search}\">${linkTitle}</a></li>";
    }
    echo "</ul></div></aside>";
}
    
include 'footer.php';